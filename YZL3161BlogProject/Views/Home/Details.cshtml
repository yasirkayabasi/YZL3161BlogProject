@model Article

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Article</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Title
        </dt>
        <dd>
            @Model.Title
        </dd>
        <dt>
            Content
        </dt>
        <dd>
            @Model.Content
        </dd>
        <dt>
            Article Picture
        </dt>
        <dd>
            @if (string.IsNullOrEmpty(Model.ArticlePicture))
            {
                <p>No picture</p>
            }
            else
            {
                <img src="~/images/@Model.ArticlePicture" alt="@Model.Title" class="img-thumbnail" />
            }
        </dd>
        <dt>
            Author
        </dt>
        <dd>
            @Model.Author.Username
        </dd>
        <dt>
            Created Time
        </dt>
        <dd>
            @Model.CreatedTime.ToString("dd/MM/yyyy")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@if (Context.Session.GetString("userId") == Model.AuthorId.ToString())
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    </div>
}